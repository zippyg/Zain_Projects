/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */
I2C_HandleTypeDef hi2c1;
/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define MPU6050_ADDR 0x68
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/

/* USER CODE BEGIN PV */

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
/* USER CODE BEGIN PFP */

void I2C1_Write(uint8_t Reg_addr, uint8_t Data) {
  HAL_I2C_Mem_Write(&hi2c1, MPU6050_ADDR, Reg_addr, I2C_MEMADD_SIZE_8BIT, &Data, 1, 1000);
}

uint8_t I2C1_Read(uint8_t Reg_addr) {
  uint8_t status;
  HAL_I2C_Mem_Read(&hi2c1, MPU6050_ADDR, Reg_addr, I2C_MEMADD_SIZE_8BIT, &status, 1, 1000);
  return status;
}

/* USER CODE END PFP */

